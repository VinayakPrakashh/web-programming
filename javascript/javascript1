<html>
<script>

let n =prompt("enter a number");


   let sum = 0;
   for (let x = 1; x <= n; x++){
document.write("<br>");
     sum = sum + x;
document.write(x+"    ");
document.write(sum+"    ");
}
let i=1;
while(i<=n){
sum+=i;
i++;
}
document.write("sum="+sum);
do{
sum+=i;
i++;
}
document.write("sum="+sum);
</script>
</html>
